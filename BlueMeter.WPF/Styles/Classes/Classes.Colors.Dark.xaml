<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        说明（中文）：
        本资源字典定义了每个职业对应的颜色与笔刷，资源键命名规则基于 ViewModel 中的枚举 BlueMeter.WPF.ViewModels：
        - ShieldKnight       -> ClassesShieldKnightColor / ClassesShieldKnightBrush （神盾骑士）
        - HeavyGuardian      -> ClassesHeavyGuardianColor / ClassesHeavyGuardianBrush （巨刃守卫者）
        - Stormblade         -> ClassesStormbladeColor / ClassesStormbladeBrush （雷影剑士）
        - WindKnight         -> ClassesWindKnightColor / ClassesWindKnightBrush （青岚骑士）
        - FrostMage          -> ClassesFrostMageColor / ClassesFrostMageBrush （冰魔导师）
        - Marksman           -> ClassesMarksmanColor / ClassesMarksmanBrush （神射手）
        - VerdantOracle      -> ClassesVerdantOracleColor / ClassesVerdantOracleBrush （森语者）
        - SoulMusician       -> ClassesSoulMusicianColor / ClassesSoulMusicianBrush （灵魂乐手）
        
        用途：
        - 在界面中通过引用相应的 Brushes 或 Colors 来保证不同职业使用统一配色。
        - 请勿随意更改资源键名，以免与代码中对资源键的引用不一致。
    -->

    <!--  未知职业 (Unknown)  -->
    <Color x:Key="ClassesUnknownColor">#FF7A7A7A</Color>
    <SolidColorBrush x:Key="ClassesUnknownBrush" Color="{StaticResource ClassesUnknownColor}" />

    <!--  神盾骑士 (ShieldKnight) - Recovery, Shield  -->
    <Color x:Key="ClassesShieldKnightColor">#8A5B23</Color>
    <SolidColorBrush x:Key="ClassesShieldKnightBrush" Color="{StaticResource ClassesShieldKnightColor}" />

    <!--  巨刃守卫者 (HeavyGuardian) - Block, Earthfort  -->
    <Color x:Key="ClassesHeavyGuardianColor">#244A7D</Color>
    <SolidColorBrush x:Key="ClassesHeavyGuardianBrush" Color="{StaticResource ClassesHeavyGuardianColor}" />

    <!--  雷影剑士 (Stormblade) - Moonstrike, Iaido Slash  -->
    <Color x:Key="ClassesStormbladeColor">#A0212F</Color>
    <SolidColorBrush x:Key="ClassesStormbladeBrush" Color="{StaticResource ClassesStormbladeColor}" />

    <!--  青岚骑士 (WindKnight) - Skyward, Vanguard  -->
    <Color x:Key="ClassesWindKnightColor">#1A5A93</Color>
    <SolidColorBrush x:Key="ClassesWindKnightBrush" Color="{StaticResource ClassesWindKnightColor}" />

    <!--  冰魔导师 (FrostMage) - Frostbeam, Icicle  -->
    <Color x:Key="ClassesFrostMageColor">#7250C7</Color>
    <SolidColorBrush x:Key="ClassesFrostMageBrush" Color="{StaticResource ClassesFrostMageColor}" />

    <!--  神射手 (Marksman) - Wildpack, Falconry  -->
    <Color x:Key="ClassesMarksmanColor">#A4831D</Color>
    <SolidColorBrush x:Key="ClassesMarksmanBrush" Color="{StaticResource ClassesMarksmanColor}" />

    <!--  森语者 (VerdantOracle) - Lifebind, Smite  -->
    <Color x:Key="ClassesVerdantOracleColor">#3E6A3F</Color>
    <SolidColorBrush x:Key="ClassesVerdantOracleBrush" Color="{StaticResource ClassesVerdantOracleColor}" />

    <!--  灵魂乐手 (SoulMusician) - Concerto, Dissonance  -->
    <Color x:Key="ClassesSoulMusicianColor">#5C1F95</Color>
    <SolidColorBrush x:Key="ClassesSoulMusicianBrush" Color="{StaticResource ClassesSoulMusicianColor}" />

    <!--  ===== ClassSpec-specific Colors (Skill-specific) =====  -->

    <!--  神盾骑士 (ShieldKnight) - Skill-specific colors  -->
    <Color x:Key="ClassSpecShieldKnightRecoveryColor">#AA6F25</Color>
    <SolidColorBrush x:Key="ClassSpecShieldKnightRecoveryBrush" Color="{StaticResource ClassSpecShieldKnightRecoveryColor}" />
    <Color x:Key="ClassSpecShieldKnightShieldColor">#8A5B23</Color>
    <SolidColorBrush x:Key="ClassSpecShieldKnightShieldBrush" Color="{StaticResource ClassSpecShieldKnightShieldColor}" />

    <!--  巨刃守卫者 (HeavyGuardian) - Skill-specific colors  -->
    <Color x:Key="ClassSpecHeavyGuardianEarthfortColor">#1F4165</Color>
    <SolidColorBrush x:Key="ClassSpecHeavyGuardianEarthfortBrush" Color="{StaticResource ClassSpecHeavyGuardianEarthfortColor}" />
    <Color x:Key="ClassSpecHeavyGuardianBlockColor">#244A7D</Color>
    <SolidColorBrush x:Key="ClassSpecHeavyGuardianBlockBrush" Color="{StaticResource ClassSpecHeavyGuardianBlockColor}" />

    <!--  雷影剑士 (Stormblade) - Skill-specific colors  -->
    <Color x:Key="ClassSpecStormbladeIaidoSlashColor">#8C1B28</Color>
    <SolidColorBrush x:Key="ClassSpecStormbladeIaidoSlashBrush" Color="{StaticResource ClassSpecStormbladeIaidoSlashColor}" />
    <Color x:Key="ClassSpecStormbladeMoonStrikeColor">#A0212F</Color>
    <SolidColorBrush x:Key="ClassSpecStormbladeMoonStrikeBrush" Color="{StaticResource ClassSpecStormbladeMoonStrikeColor}" />

    <!--  青岚骑士 (WindKnight) - Skill-specific colors  -->
    <Color x:Key="ClassSpecWindKnightVanGuardColor">#143A55</Color>
    <SolidColorBrush x:Key="ClassSpecWindKnightVanGuardBrush" Color="{StaticResource ClassSpecWindKnightVanGuardColor}" />
    <Color x:Key="ClassSpecWindKnightSkywardColor">#1A5A93</Color>
    <SolidColorBrush x:Key="ClassSpecWindKnightSkywardBrush" Color="{StaticResource ClassSpecWindKnightSkywardColor}" />

    <!--  冰魔导师 (FrostMage) - Skill-specific colors  -->
    <Color x:Key="ClassSpecFrostMageIcicleColor">#6A7BFF</Color>
    <SolidColorBrush x:Key="ClassSpecFrostMageIcicleBrush" Color="{StaticResource ClassSpecFrostMageIcicleColor}" />
    <Color x:Key="ClassSpecFrostMageFrostBeamColor">#7250C7</Color>
    <SolidColorBrush x:Key="ClassSpecFrostMageFrostBeamBrush" Color="{StaticResource ClassSpecFrostMageFrostBeamColor}" />

    <!--  神射手 (Marksman) - Skill-specific colors  -->
    <Color x:Key="ClassSpecMarksmanWildpackColor">#A4831D</Color>
    <SolidColorBrush x:Key="ClassSpecMarksmanWildpackBrush" Color="{StaticResource ClassSpecMarksmanWildpackColor}" />
    <Color x:Key="ClassSpecMarksmanFalconryColor">#A5861A</Color>
    <SolidColorBrush x:Key="ClassSpecMarksmanFalconryBrush" Color="{StaticResource ClassSpecMarksmanFalconryColor}" />

    <!--  森语者 (VerdantOracle) - Skill-specific colors  -->
    <Color x:Key="ClassSpecVerdantOracleSmiteColor">#467D46</Color>
    <SolidColorBrush x:Key="ClassSpecVerdantOracleSmiteBrush" Color="{StaticResource ClassSpecVerdantOracleSmiteColor}" />
    <Color x:Key="ClassSpecVerdantOracleLifeBindColor">#3E6A3F</Color>
    <SolidColorBrush x:Key="ClassSpecVerdantOracleLifeBindBrush" Color="{StaticResource ClassSpecVerdantOracleLifeBindColor}" />

    <!--  灵魂乐手 (SoulMusician) - Skill-specific colors  -->
    <Color x:Key="ClassSpecSoulMusicianDissonanceColor">#5B2B8A</Color>
    <SolidColorBrush x:Key="ClassSpecSoulMusicianDissonanceBrush" Color="{StaticResource ClassSpecSoulMusicianDissonanceColor}" />
    <Color x:Key="ClassSpecSoulMusicianConcertoColor">#5C1F95</Color>
    <SolidColorBrush x:Key="ClassSpecSoulMusicianConcertoBrush" Color="{StaticResource ClassSpecSoulMusicianConcertoColor}" />
</ResourceDictionary>